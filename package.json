{
  "name": "pixi-solid",
  "private": true,
  "version": "0.0.1",
  "description": "A library to write PixiJS applications with SolidJS",
  "author": "Luke Thompson",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/LukeCarlThompson/pixi-solid"
  },
  "type": "module",
  "sideEffects": false,
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "dev": "vite",
    "prebuild": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json && npm run build:docs",
    "build:docs": "typedoc --options typedoc.config.js",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "pixi.js": "^8.14.3",
    "solid-js": "^1.9.10"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@types/node": "^24.10.1",
    "jsdom": "27.2.0",
    "sass-embedded": "1.93.3",
    "typedoc": "0.28.15",
    "typescript": "~5.9.3",
    "vite": "npm:rolldown-vite@7.2.5",
    "vite-plugin-solid": "^2.11.10",
    "vitest": "4.0.14"
  },
  "overrides": {
    "vite": "npm:rolldown-vite@7.2.5"
  }
}
